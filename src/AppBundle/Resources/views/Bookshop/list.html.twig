{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
            <th>Title</th>
            <th>Author</th>
            <th>Date Published</th>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.publishedAt.format('j M Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
